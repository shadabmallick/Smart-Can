<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sketch.smartcan">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>




    <application
        android:name="com.sketch.smartcan.Util.GlobalClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme"
        >


        <activity android:name=".Activity.SplashScreen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">


            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">

        </activity>

        <activity android:name=".Activity.EnquiryActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"

            android:windowSoftInputMode="adjustPan|stateHidden">

        </activity>

        <activity android:name=".Activity.RegisterActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="adjustPan|stateHidden">

        </activity>

        <activity android:name=".Activity.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="adjustPan|stateHidden">

        </activity>

        <activity android:name=".Activity.ForgetPassword"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="stateVisible|adjustPan|stateHidden">

        </activity>

        <activity android:name=".Activity.NewsActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="stateHidden">

        </activity>

        <activity android:name=".Activity.ActivityInfographic"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="stateHidden">

        </activity>

        <activity android:name=".Activity.ActivityBlog"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"

            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".Activity.BlogSingle"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".Activity.InfoSingle"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".Activity.NewsSingle"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="stateHidden"></activity>








        <activity android:name=".Activity.Container"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="stateHidden">

        </activity>

        <activity android:name=".Activity.OrderTrack"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="stateHidden">

        </activity>


        <activity android:name=".Activity.OrderComplain"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="stateHidden">

        </activity>

        <activity android:name=".Activity.OrderDetails"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="stateHidden">

        </activity>
        <activity android:name=".Activity.ComplainDetails"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:windowSoftInputMode="stateHidden">

        </activity>


    </application>

</manifest>