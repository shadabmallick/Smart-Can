<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlue">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@mipmap/profile_bg"
        />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >


        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:cardBackgroundColor="@color/status_blue"
            card_view:cardUseCompatPadding="true"
            android:layout_marginTop="50dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >


                <ImageView
                    android:id="@+id/iv_edit_mode"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:tint="@color/white"
                    android:src="@mipmap/icn1"
                    android:scaleType="fitXY"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="100dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_phone"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/mobile"
                            android:tint="@color/white"
                            android:layout_centerVertical="true"
                            />

                        <EditText
                            android:id="@+id/edt_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:layout_centerVertical="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/light_gray"
                            android:gravity="end"
                            android:layout_toRightOf="@+id/iv_phone"
                            android:padding="10dp"
                            android:autofillHints="Mobile"
                            android:hint="Mobile"
                            android:inputType="phone"
                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/light_gray"
                        android:layout_marginTop="5dp"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >

                        <ImageView
                            android:id="@+id/iv_email"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/mail"
                            android:tint="@color/white"
                            android:layout_centerVertical="true"
                            />

                        <EditText
                            android:id="@+id/edt_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:layout_centerVertical="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/light_gray"
                            android:gravity="end"
                            android:layout_toRightOf="@+id/iv_email"
                            android:autofillHints="Email"
                            android:hint="Email"
                            android:padding="10dp"
                            android:inputType="textEmailAddress"
                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/light_gray"
                        android:layout_marginTop="5dp"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >

                        <ImageView
                            android:id="@+id/iv_location"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/location"
                            android:tint="@color/white"
                            android:layout_centerVertical="true"
                            />

                        <EditText
                            android:id="@+id/edt_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:layout_centerVertical="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/light_gray"
                            android:gravity="end"
                            android:layout_toRightOf="@+id/iv_location"
                            android:autofillHints="Address"
                            android:hint="Address"
                            android:padding="10dp"
                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/light_gray"
                        android:layout_marginTop="5dp"
                        />



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >

                        <ImageView
                            android:id="@+id/iv_company"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/company"
                            android:tint="@color/white"
                            android:layout_centerVertical="true"
                            />

                        <EditText
                            android:id="@+id/edt_company"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:layout_centerVertical="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/light_gray"
                            android:gravity="end"
                            android:layout_toRightOf="@+id/iv_company"
                            android:autofillHints="Company"
                            android:hint="Company"
                            android:padding="10dp"
                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/light_gray"
                        android:layout_marginTop="5dp"
                        />



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                    </RelativeLayout>


                </LinearLayout>


            </RelativeLayout>


        </android.support.v7.widget.CardView>


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/profile_1"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorBlue"
            android:layout_centerHorizontal="true"
            android:elevation="10dp"
            />

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="Sourav Roy"
            android:textColor="@color/white"
            android:textColorHint="@color/light_gray"
            android:hint="Name"
            android:textSize="16sp"
            android:background="@null"
            android:elevation="10dp"
            />


    </RelativeLayout>







</RelativeLayout>