<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/white">
    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:background="@color/colorBlue"
        android:gravity="center_vertical"
        android:layout_height="?android:attr/actionBarSize">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@mipmap/left_arrow"

            android:id="@+id/img_back"
            android:tint="@android:color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_marginTop="5dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:text="Blog"
            android:textSize="16dp"
            android:textColor="@android:color/white"/>

        <ImageView
            android:id="@+id/img_home"
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:layout_alignParentRight="true"
            android:src="@mipmap/home_orange"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:tint="@android:color/white"
            android:scaleType="fitEnd"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_blog_single"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@mipmap/blog_map"
        android:scaleType="fitXY"
        android:layout_margin="20dp"
       android:layout_below="@+id/rl_main"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_date"
        android:text="12/5/2019"
        android:textSize="14dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorOrange"
        android:layout_below="@+id/img_blog_single"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title_single"
        android:text="@string/text_single"
        android:textSize="14dp"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tv_date"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title_brief"
        android:text="@string/text"
        android:textSize="14dp"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@+id/tv_title_single"/>



</RelativeLayout>